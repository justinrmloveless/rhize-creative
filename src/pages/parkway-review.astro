---
// Astro page for Parkway Trail photo review
const title = "1126 Parkway Trail - Photo Review";
const photos = [
    "IMG_0791.jpg", "IMG_0914.jpg", "IMG_0927.jpg", "IMG_0928.jpg", "IMG_0929.jpg",
    "IMG_0946.JPG", "IMG_0948.JPG", "IMG_0949.jpg", "IMG_0951.jpg", "IMG_0996.jpg",
    "IMG_0997.jpg", "IMG_0998.jpg", "IMG_1517.JPG", "IMG_1518.JPG", "IMG_1539.jpg",
    "IMG_1540.jpg", "IMG_1544.jpg", "IMG_1545.JPG", "IMG_1546.jpg"
];
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
        body { 
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            margin: 0; 
            padding: 20px; 
            background: #f8f9fa;
            color: #333;
        }
        .header {
            max-width: 800px;
            margin: 0 auto 30px auto;
            text-align: center;
        }
        h1 {
            color: #2c3e50;
            margin-bottom: 10px;
            font-size: 28px;
        }
        .subtitle {
            color: #7f8c8d;
            font-size: 16px;
            margin-bottom: 20px;
        }
        .instructions {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .instructions strong {
            display: block;
            font-size: 18px;
            margin-bottom: 8px;
        }
        .photo-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 25px;
            max-width: 800px;
            margin: 0 auto;
        }
        .photo-item {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        }
        .photo-number {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            color: white;
            padding: 15px 20px;
            font-weight: 600;
            font-size: 20px;
        }
        img {
            width: 100%;
            height: auto;
            display: block;
        }
        .filename {
            padding: 12px 20px;
            font-size: 12px;
            color: #95a5a6;
            border-top: 1px solid #ecf0f1;
        }
        .count {
            background: #3498db;
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
        }
        @media (max-width: 600px) {
            .header h1 { font-size: 24px; }
            .instructions { padding: 16px; }
            .photo-number { padding: 12px 16px; font-size: 18px; }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>1126 Parkway Trail - Photo Review</h1>
        <div class="subtitle">Select photos for Rhize Creative website</div>
        <div class="count">{photos.length} photos</div>
    </div>
    
    <div class="instructions">
        <strong>Voice Commands:</strong>
        Say "Keep 1, 3, 5-8" or "Remove 2, 4, 9-15" etc.<br>
        Sofia will store your selections and move to next project.
    </div>
    
    <div class="photo-grid">
        {photos.map((photo, index) => (
            <div class="photo-item">
                <div class="photo-number">Photo {index + 1}</div>
                <img src={`/temp-photos/${photo}`} alt={`Parkway Trail photo ${index + 1}`} loading="lazy" />
                <div class="filename">{photo}</div>
            </div>
        ))}
    </div>
</body>
</html>