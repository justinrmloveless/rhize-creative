---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Landscape design rooted in California. Concept design, plant palettes, and construction consulting in Santa Barbara and Ventura County.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet" />
    <title>{title} — Rhize Creative</title>
  </head>
  <body class="bg-sand text-earth font-sans antialiased">
    <nav class="fixed top-0 w-full z-50 bg-sand/90 backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-6 py-5 flex justify-between items-center">
        <a href="/" class="block"><img src="/logo.png" alt="Rhize Creative" class="h-12" /></a>
        <div class="hidden md:flex gap-8 text-sm tracking-wide uppercase">
          <a href="/projects" class="hover:text-sage transition-colors">Projects</a>
          <a href="/services" class="hover:text-sage transition-colors">Services</a>
          <a href="/about" class="hover:text-sage transition-colors">About</a>
          <a href="/contact" class="hover:text-sage transition-colors border border-earth px-4 py-1.5 hover:bg-earth hover:text-sand transition-all">Start a Project</a>
        </div>
        <button id="mobile-menu-btn" class="md:hidden text-earth">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="bg-earth text-sand/80 py-16 mt-24">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid md:grid-cols-3 gap-12">
          <div>
            <h3 class="font-serif text-xl text-sand mb-4">Rhize Creative</h3>
            <p class="text-sm leading-relaxed">Landscape design rooted in California.<br/>Santa Barbara · Ventura · Malibu</p>
          </div>
          <div>
            <h4 class="text-sm uppercase tracking-wide text-sand mb-4">Navigate</h4>
            <div class="flex flex-col gap-2 text-sm">
              <a href="/projects" class="hover:text-sand transition-colors">Projects</a>
              <a href="/services" class="hover:text-sand transition-colors">Services</a>
              <a href="/about" class="hover:text-sand transition-colors">About</a>
              <a href="/contact" class="hover:text-sand transition-colors">Contact</a>
            </div>
          </div>
          <div>
            <h4 class="text-sm uppercase tracking-wide text-sand mb-4">Connect</h4>
            <div class="flex flex-col gap-2 text-sm">
              <a href="https://instagram.com/rhizecreative" class="hover:text-sand transition-colors">Instagram</a>
              <a href="mailto:hello@rhizecreative.com" class="hover:text-sand transition-colors">hello@rhizecreative.com</a>
            </div>
          </div>
        </div>
        <div class="border-t border-sand/20 mt-12 pt-8 text-xs">
          &copy; {new Date().getFullYear()} Rhize Creative. All rights reserved.
        </div>
      </div>
    </footer>
  </body>
</html>
